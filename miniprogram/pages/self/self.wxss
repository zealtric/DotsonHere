/* 这里是care */
#care{
  width: 100vw;
  height: 60px;
  border-bottom: 1px solid #A6A6A6;
}

#careContainer{
  width: 100vw;
  height: 60px;
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
  align-items: center;
  position: relative;
  top: -95px;
}

.care{
  flex-grow: 1;
  text-align: center;
  font-size: 12px;
}



