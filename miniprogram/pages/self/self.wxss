#pic{
  width: 70px;
  height: 70px;
  margin-right: 5px;
  position: relative;
  left: 70px;
  top: -70px;
  display: flex;
  flex-wrap: wrap;
}

.picContainer{
  margin-right: 2px;
  margin-bottom: 2px;
}

#textCon{
  height: 70px;
  margin-right: 8px;
  position: relative;
}

#textConContainer{
  height: 70px;
}

#textCon text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 15px;
}